source 'https://rubygems.org'

gem 'rails'

group :development do
  gem 'sqlite3'
  gem 'rspec-rails'
  gem 'guard-rspec'
end

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails'
  gem 'coffee-rails'
  gem 'uglifier'
  gem 'therubyracer'
end

gem 'jquery-rails'

group :test do
  gem 'rspec-rails'
  gem 'webrat'
  # System-dependent gems
  gem 'rb-inotify'
  gem 'rb-readline'
  gem 'libnotify'
  
  gem 'guard-spork'
  gem 'spork'
end

group :production do
  gem 'pg'
end